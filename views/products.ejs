<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>List Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <!-- <h1>Hello, world!</h1> -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/admin">Product</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/add">Add Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
            </li>
            </ul>
          </div>
        </div>
      </nav>
<br>
      <form action="/admin" method="get" style="text-align: center;">
        <input type="submit" class="btn btn-light" value="All"> 
        <input type="submit" class="btn btn-light" value="T-shirts" name="sortCategory"> 
        <input type="submit" class="btn btn-light" value="Dresses" name="sortCategory">
        <input type="submit" class="btn btn-light" value="Jackets" name="sortCategory">
      </form>
<br>

<div style="text-align: center;">
  <% if (nameProduct) { %>
    <h5 style="display: inline-block; border: 3px solid rgb(234, 227, 226); padding: 10px; background-color: rgb(234, 227, 226); color: red; border-radius: 5px;">
      <%= `Product ${nameProduct} has been successfully deleted` %>
    </h5>
  <% } %>
</div>


<br>
      <table class="table">
        <thead>
          <tr style="text-align: center;">
            <th scope="col">No</th>
            <th scope="col">Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Stock</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
            <% product.forEach((item, index) => { %>
          <tr style="text-align: center;">
                <th scope="row"> <%= index+1 %> </th>
                <td><img src="<%= item.imageUrl %>" height="150" alt="product pict"></td>
                <td style="padding-top: 60px;"> <%= item.name %> </td>
                <td style="padding-top: 60px;"> <%= item.Category.name %> </td>
                <td style="padding-top: 60px;"> <%= item.description %> </td>
                <td style="padding-top: 60px;"> <%= item.stock %> </td>
                <td style="padding-top: 60px;"> <%= item.formatPrice %> </td>
                <td style="padding-top: 60px;">
                    <button type="button" class="btn btn-primary"><a href="/admin/<%= item.id %>/increase-stock" style="color: white; text-decoration: none;">+ Stock</a></button>
                    <button type="button" class="btn btn-success"><a href="/admin/<%= item.id %>/decrease-stock" style="color: white; text-decoration: none;">- Stock</a></button>
                    <button type="button" class="btn btn-danger"><a href="/admin/<%= item.id %>/delete" style="text-decoration: none; color: white;">Delete</a></button>
                </td>
            </tr>
            <% }) %>
          </tr>
        </tbody>
      </table>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>